@-webkit-keyframes fadeEffect {
  from {opacity: 0;}
  to {opacity: 1;}
}

@keyframes fadeEffect {
  from {opacity: 0;}
  to {opacity: 1;}
}
@-webkit-keyframes slideUp {
  from {top: 10px;}
  to {top: 0;}
}

@keyframes slideUp {
  from {top: 10px;}
  to {top: 0;}
}

@keyframes fadeDown {
  from {opacity: 0; margin-top: -10px;}
  to {opacity: 1; margin-top: 0;}
}

@keyframes zoomOut {
    from {transform: scale(1.2);}
    to {transform: scale(1);}
