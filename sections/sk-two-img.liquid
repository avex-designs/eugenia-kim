<div class="sk-two-img-wrap">
  <div class="sk-two-img-wrap-inner">
    <div class="sk-two-img-col sk-three-col">
      <a href="{{section.settings.first-link-url}}" class="sk-three-col-img" style="background-image: url({{section.settings.first-img | img_url: 'master'}})">
      </a>
      
       <div class="sk-col-text">
         <h3>{{section.settings.first-text}}</h3>
           <a href="{{section.settings.first-link-url}}">{{section.settings.first-link-text}}</a>
      </div>
    </div>
    
   	<div class="sk-two-img-col sk-one-col">
      <a href="{{section.settings.second-link-url}}" class="sk-col-one-img"  style="background-image: url({{section.settings.second-img | img_url: 'master'}})">
      </a>
      
      <div class="sk-col-text">
        <h3>{{section.settings.second-text}}</h3>
        <a href="{{section.settings.second-link-url}}">{{section.settings.second-link-text}}</a>
      </div>
    </div>
  </div>
</div>

