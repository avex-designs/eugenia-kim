  {
    "name": "Two Image Row",
    "settings": [
		{
			"type": "image_picker",
			"label": "First Image",
			"id": "first-img"
		},
		{
			"type": "image_picker",
			"label": "Second Image",
			"id": "second-img"
		},
		{
			"type": "text",
			"label": "First Image Text",
			"id": "first-text"
		},
		{
			"type": "text",
			"label": "Second Image Text",
			"id": "second-text"
		},
		{
			"type": "text",
			"label": "First Link Text",
			"id": "first-link-text"
		},
		{
			"type": "text",
			"label": "Second Link Text",
			"id": "second-link-text"
		},
        {
          "type": "url",
          "id": "first-link-url",
          "label": "First link"
      	},
		{
          "type": "url",
          "id": "second-link-url",
          "label": "Second link"
        }
	],
	"presets": [
      {
        "name": "Two Image Row",
        "category": "Image"
      }
    ]
  }
{% endschema %}

