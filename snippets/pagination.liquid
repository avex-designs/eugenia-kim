<ul class="list--inline pagination">
  <li>
    {% unless paginate.previous.is_link %}
      <div class="pagination-arrow">
        {% comment %}{% include 'icon-arrow-left' %}{% endcomment %}
        <span class="icon__fallback-text">{{ 'general.pagination.previous' | t }}</span>
      </div>
    {% else %}
      <a href="{{ paginate.previous.url }}" class="pagination-arrow">
        {% comment %}{% include 'icon-arrow-left' %}{% endcomment %}
        <img src="{{ "black-arrow-left.png" | asset_url }}">
        <span class="icon__fallback-text">{{ 'general.pagination.previous' | t }}</span>
      </a>
    {% endunless %}
  </li>
  <li class="pagination__text">
    {{ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages }}
  </li>
  <li>
    {% unless paginate.next.is_link %}
      <div class="pagination-arrow">
        {% comment %}{% include 'icon-arrow-right' %}{% endcomment %}
        <span class="icon__fallback-text">{{ 'general.pagination.next' | t }}</span>
      </div>
    {% else %}
      <a href="{{ paginate.next.url }}" class="pagination-arrow">
        {% comment %}{% include 'icon-arrow-right' %}{% endcomment %}
        <img src="{{ "black-arrow-right.png" | asset_url }}">
        <span class="icon__fallback-text">{{ 'general.pagination.next' | t }}</span>
      </a>
    {% endunless %}
  </li>
</ul>
